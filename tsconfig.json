{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
		"moduleResolution": "nodenext",
    "outDir": "./dist",
    "rootDir": "./src",
		"types": [
			"node"
		],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,

		"experimentalDecorators": true,  
    "emitDecoratorMetadata": true
  }
}